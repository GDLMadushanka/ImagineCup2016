<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/css")
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />




</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NextRadio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                   

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {

                            
                            <li>@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, null)</li>
                          
                        }
                        else
                        {
                            <li id="login"><a>Login</a></li>

                            <li>@Html.ActionLink("Register", "Register", "Account", new { area = "" }, null)</li>
                        }
                    }


                </ul>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <div id="createForm" title="Login">
    </div>

    @Scripts.Render("~/bundles/bootstrap")


    <script type="text/javascript">

        $(document).ready(function () {
          
            try {

                var dialog = $("#createForm").dialog({
                    autoOpen: false,
                    title: "Login",
                    show: {
                        effect: "blind",
                        duration: 1000
                    },
                    hide: {
                        effect: "explode",
                        duration: 1000
                    },
                    position: ({
                        "my": "right top",
                        "at": "right bottom",
                        "of": $("#login")
                    }),
                    width: 230,
                    minHeight: 'auto'

                });

                $("#login").click(function () {
                    $.ajax({
                        // Call CreatePartialView action method
                        url: "/Account/LoinTest",
                        type: 'Get',
                        context: this,
                        success: function (data) {

                            dialog.html(data);
                            dialog.dialog("open");
                        },
                        error: function () {
                            alert("something seems wrong");
                        }
                    });
                });

            }
            catch (err) { console.log(err.message) }
        });

    </script>
  
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
</body>
</html>
